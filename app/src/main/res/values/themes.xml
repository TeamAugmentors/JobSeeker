<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JobSeeker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/job_seeker_logo_green</item>
        <!-- Secondary brand color. -->
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:ignore="NewApi">false</item>
        <item name="android:statusBarColor">@color/job_seeker_logo_green</item>

        <item name="bottomSheetDialogTheme">@style/ModalBottomSheetDialog</item>

    </style>

    <style name="ModalBottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <!-- Apply attributes here -->
    </style>

    <style name="ModalBottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/ModalBottomSheet</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/layer_list</item>

        <item name="android:statusBarColor">@color/job_seeker_logo_green</item>
        <item name="android:navigationBarColor">@color/job_seeker_logo_green</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Theme.JobSeeker">
        <!--This line changes the color of text in Toolbar-->
        <item name="android:textColorPrimary">@color/white</item>
        <!--This line changes the color of icons in toolbar (back, overflow menu icons)-->
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="CreateUser" parent="Theme.MaterialComponents.DayNight">

    </style>
    <style name="Navigation" parent="Theme.JobSeeker">
        <item name="colorPrimary">@color/job_seeker_logo_green</item>
        <item name="android:textColorSecondary">@color/job_seeker_logo_green</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>
    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/input_etext_outline_color</item>
    </style>

    <style name="CreateJobTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:forceDarkAllowed" tools:ignore="NewApi">false</item>
        <item name="boxStrokeColor">@color/job_input_etext_outline_color</item>
    </style>

    <style name="Dialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:colorPrimary">@color/job_seeker_logo_green</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/spin_in</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

    <style name="textChipStyle." parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:fontFamily">@font/roboto_light_xml</item>
    </style>

    <style name="Theme.Date" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/job_seeker_logo_green</item>
        <!-- Secondary brand color. -->
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/job_seeker_logo_green</item>
    </style>

    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">@color/job_seeker_logo_green</item>
        <item name="android:dayOfWeekBackground">@color/job_seeker_green_hint</item>
        <item name="android:dayOfWeekTextAppearance">@color/red</item>
        <item name="android:headerMonthTextAppearance">@color/purple_700</item>
        <item name="android:headerDayOfMonthTextAppearance">@color/teal_200</item>
        <item name="android:headerYearTextAppearance">@color/black</item>
        <item name="android:yearListItemTextAppearance">@color/job_seeker_green_hint</item>
        <item name="android:yearListSelectorColor">@color/purple_200</item>
        <item name="android:calendarTextColor">@color/teal_700</item>
    </style>

    <style name="CustomThemeOverlay_MaterialCalendar_Fullscreen"
        parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen">
        <item name="materialCalendarStyle">@style/Custom_MaterialCalendar.Fullscreen</item>
    </style>

    <style name="Custom_MaterialCalendar.Fullscreen"
        parent="@style/Widget.MaterialComponents.MaterialCalendar.Fullscreen">
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>