<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">



    <TextView
        android:id="@+id/clientMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/white_pill"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_5sdp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:lineSpacingExtra="@dimen/_2sdp"
        android:maxWidth="@dimen/_250sdp"
        android:text="Hello! I will blatently love you"
        />

    <TextView
        android:id="@+id/senderMessage"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/green_pill"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingVertical="@dimen/_5sdp"
        android:textColor="@color/white"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:lineSpacingExtra="@dimen/_2sdp"
        android:maxWidth="@dimen/_250sdp"
        android:text="Hello! I want u to kill me really quick ok 1 hit kill wsdgggggggggggggggggggggggggggggggha"
        />

</LinearLayout>